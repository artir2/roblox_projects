{
    "name": "Roblox Development Environment",
    "image": "mcr.microsoft.com/devcontainers/universal:2-ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/rust:1": {},
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "johnnymorganz.luau-lsp",
                "johnnymorganz.stylua",
                "kampfkarren.selene-vscode",
                "evaera.vscode-rojo",
                "nightrains.robloxlsp"
            ],
            "settings": {
                "luau-lsp.platform.type": "roblox",
                "luau-lsp.fflags.sync": true,
                "files.associations": {
                    "*.lua": "luau"
                },
                "[luau]": {
                    "editor.defaultFormatter": "JohnnyMorganz.luau-lsp",
                    "editor.formatOnSave": true
                }
            }
        }
    },
    "postCreateCommand": "curl -L https://github.com/rojo-rbx/rojo/releases/latest/download/rojo-linux.zip -o rojo.zip && unzip rojo.zip && sudo mv rojo /usr/local/bin/ && rm rojo.zip",
    "forwardPorts": [
        34872
    ],
    "portsAttributes": {
        "34872": {
            "label": "Rojo Server",
            "onAutoForward": "notify"
        }
    }
}